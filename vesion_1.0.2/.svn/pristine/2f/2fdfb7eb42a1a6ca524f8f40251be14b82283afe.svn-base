.weui-cell__ft view:before{
  
  color:#ccc;
  content:'|';
}
.weui-cells:after{
    border-bottom: 0;
}
.weui-cells:before{
    border-top:0;
}
input{
    font-size: 30rpx;
    color:#B8B8B8;
}
.weui-cell:before{
    left: 0;
    border-top: 1px solid #f5f5f8;
}

/*toast*/  
.toast_box {  
  display: flex;  
  width: 100%;  
  height: 100%;  
  justify-content: center;  
  align-items: center;  
  position: fixed;  
  left: 0;
  top: 0;
  z-index: 999;  
}  
.toast_content {  
  padding: 20rpx;  
  background: rgba(0, 0, 0, 0.7);  
  border-radius: 20rpx;  
}  
.toast_content_text {  
  height: 100%;  
  width: 100%;  
  color: #fff;  
  font-size: 28rpx;  
  text-align: center;  
} 